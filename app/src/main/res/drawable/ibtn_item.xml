<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FF6D3F" />
            <corners android:radius="15dp" />
            <gradient android:angle="45" android:endColor="#78DFEC" android:startColor="#002FFF" />
        </shape>
    </item>
    <item>

        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#FF6D3F" />
            <corners android:radius="15dp" />
            <gradient android:angle="90" android:endColor="#78DFEC" android:startColor="#002FFF" />
        </shape>
    </item>
</selector>
